# Development Environment Variables
NODE_ENV=development
VITE_APP_URL=http://localhost:5173
PORT=3000

# API Configuration
VITE_API_BASE_URL=/api

# Database Configuration
DATABASE_URL=sqlite://./dev.db

# Authentication (Development keys - change in production)
JWT_SECRET=dev-jwt-secret-key-change-in-production
SESSION_SECRET=dev-session-secret-change-in-production

# Email Configuration (Development - uses console)
EMAIL_PROVIDER=console

# Stripe Configuration (Development - disabled by default)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_development_key
# STRIPE_SECRET_KEY=sk_test_your_secret_key_here (uncomment when needed)
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here (uncomment when needed)

# Fee Configuration (Development defaults)
STRIPE_FEE_PERCENTAGE=2.9
STRIPE_FEE_FIXED=30
PLATFORM_FEE_PERCENTAGE=3.0
PLATFORM_FEE_FIXED=0

# Feature Flags (Development)
ENABLE_PAYMENTS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_ANALYTICS=false

# Security
CORS_ORIGINS=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# File Upload
UPLOAD_PATH=./uploads